<header class="header" style="display: flex; justify-content: space-between; align-items: center; padding: 1rem 2rem; background: #BBDEA8; box-shadow: 0 2px 5px rgba(0,0,0,0.1); flex-wrap: wrap; gap: 1rem;">

  <!-- 🌻 Logo e nome do jardim -->
  <div class="header-esquerda">
    <div class="logo" style="display: flex; align-items: center;">
      <span style="font-size: 2rem;"></span>
      <h1 style="margin-left: 0.5rem; font-size: 1.8rem; color: var(--marrom1);">
      <%= jardim.nome %>
      </h1>
    </div>

    <!-- 🌐 Navegação -->
    <nav class="nav" style="display: flex; gap: 1rem;">
      <a href="/api/home" style="text-decoration: none; color: #3E2623;">Início</a>
      <a href="/api/loja" style="text-decoration: none; color: #3E2623 ;">Loja</a>
      <a href="/perfil" style="text-decoration: none; color: #3E2623;">Perfil</a>
      <a href="/sobre" style="text-decoration: none; color: #3E2623;">Sobre</a>
    </nav>
  </div>  
  
  <!-- 🫁 Contador de Oxigênio -->
  <div class="oxigenio-contador" style="font-size: 1.3rem; color: #2f8f2f; display: flex; align-items: center;">
    <span style="margin-right: 0.3rem; animation: respirar 2s infinite ease-in-out;"><img src="/images/icones/O2.png" alt="O2"></span>
    <span id="oxigenioValor"><%= oxigenioTotal %></span>
  </div>

</header>

<!-- 🎨 Estilo da animação -->
<style>
  @keyframes respirar {
    0%, 100% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.7;
    }
  }

  .oxigenio-contador {
    transition: transform 0.3s ease;
  }

  .oxigenio-contador.pulso {
    transform: scale(1.1);
  }
</style>
<script>
  const oxigenioValor = document.getElementById('oxigenioValor');

  async function atualizarOxigenio() {
    try {
      const res = await fetch('/api/oxigenio');
      const data = await res.json();
      const novoValor = Math.floor(data.oxigenioTotal);

      if (oxigenioValor.textContent !== String(novoValor)) {
        oxigenioValor.textContent = novoValor;
        const contador = document.querySelector('.oxigenio-contador');
        contador.classList.add('pulso');
        setTimeout(() => contador.classList.remove('pulso'), 300);
      }
    } catch (err) {
      console.error('Erro ao atualizar oxigênio:', err);
    }
  }

  // 🕒 Atualiza a cada 60 segundos
  setInterval(atualizarOxigenio, 60000);

  // Atualiza assim que carregar também
  atualizarOxigenio();
</script>



<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <title>🌼 Loja de Plantas</title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
</head>
<body class="pagina-loja">

  <%- include('partials/header', { jardim: jardim, oxigenioTotal: oxigenioTotal }) %>

  <section class="catalogo-loja">
    <% plantas.forEach(planta => {
      if (planta.nome !== 'Girassol') { %>
        <div class="card-planta">
          <img src="/images/plantas/<%= planta.imagem %>" alt="<%= planta.nome %>">
          <h3><%= planta.nome %></h3>
          <p class="descricao-planta"><%= planta.descricao %></p>
          <p class="dados-planta">🫁 Produção: <%= planta.oxigeniopm %> ppm</p>
          <p class="dados-planta">💰 Preço: <%= planta.preco %> ppm</p>
          <form action="/api/comprar" method="POST">
            <input type="hidden" name="plantaId" value="<%= planta._id %>">
            <button type="submit">🛒 Comprar</button>
          </form>
        </div>
    <% } }) %>
  </section>

  <%- include('partials/footer'); %>
</body>
</html>
